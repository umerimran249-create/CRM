{
  "name": "crm-system",
  "version": "1.0.0",
  "description": "CRM System with Project Management and Financial Tracking",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install",
    "create-admin": "node server/scripts/createAdmin.js",
    "seed": "node server/scripts/seedData.js",
    "migrate:data": "node server/scripts/migrateCsvToFirebase.js",
    "build": "cd client && npm run build",
    "deploy": "npm run build && firebase deploy --only hosting"
  },
  "keywords": [
    "crm",
    "project-management",
    "express",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.5.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
